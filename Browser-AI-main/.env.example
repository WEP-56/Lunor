# [1] APP CONFIGURATION
NEXT_PUBLIC_APP_NAME="Comet"

# [2] FIREBASE CONFIGURATION (Required for Google Login & Auth)
# Get these from Firebase Console > Project Settings
NEXT_PUBLIC_FIREBASE_API_KEY="your_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your_project_id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your_project_id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your_project_id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="your_measurement_id"

# [3] DATABASE CONFIGURATION (MySQL / Hostinger)
# Used for persistent history, bookmarks, and user metadata
DB_HOST="your_db_host"
DB_USER="your_db_user"
DB_PASSWORD="your_db_password"
DB_DATABASE="your_db_name"

# [4] OPENAI API KEY (Required for AI features)
OPENAI_API_KEY="your_openai_api_key"

# [5] SERPAPI API KEY (Required for Google Search results)
SERPAPI_API_KEY="your_serpapi_api_key"

# [6] LANDING PAGE URL
NEXT_PUBLIC_LANDING_PAGE_URL="http://localhost:3000"